<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="theaters">
	
	<typeAlias alias="Theater" type="rose.theater.bean.Theater"/>
	<!-- Select All -->
	<select id="getTheaterList" resultClass="Theater" >
		select * from THEATER_INFO
	</select>
	<!-- Select with area_id -->
	<select id="getTheaterInfo" resultClass="Theater" parameterClass="int">
		select * from THEATER_INFO where theater_id = #theater_id#
	</select>
	<!-- insert new theater -->
	<insert id="setNewTheater" parameterClass="Theater">
		exec insert_theater(#theater_name#, #area_id#, #adress#, #phone#, #location_x#, #location_y#)
	</insert>
	
	<update id="updateTheaterInfo" parameterClass="Theater">
		update THEATER_INFO set THEATER_NAME = #theater_name#, AREA_ID = #area_id#, ADRESS = #adress#, PHONE = #phone#, LOCATION_X = #location_x#, LOCATION_Y = #location_y# where THEATER_ID = #theater_id#
	</update>
	
	<delete id="deleteTheaterInfo" parameterClass="int">
		delete from THEATER_INFO where THEATER_ID = #theater_id#
	</delete>
	
	<update id="updateTheaterImage" parameterClass="Theater">
		update THEATER_INFO set IMAGE = #image# where THEATER_ID = #theater_id#
	</update>
	
</sqlMap>